<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_row_tvshow_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_item_tvshow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        tools:src="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_title_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="@string/movies_name"
            />

        <TextView
            android:id="@+id/tv_item_genre_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            tools:text="@string/genre_movies"/>

        <TextView
            android:id="@+id/tv_item_rating_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/rating_movies"/>

        <TextView
            android:id="@+id/tv_item_desc_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:visibility="gone"
            tools:text="@string/description_movie" />

        <TextView
            android:id="@+id/tv_item_release_date_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:visibility="gone"
            tools:text="@string/release_date"
            />
    </LinearLayout>

</LinearLayout>